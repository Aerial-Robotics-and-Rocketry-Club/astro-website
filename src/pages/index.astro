---
import Base from "../layouts/base.astro";
import * as metadata from "./metadata.md";
---
<Base title={metadata.frontmatter.title}>

    <!-- Hero -->
    <div slot="hero" class="relative h-screen flex items-center justify-center text-center overflow-hidden font-heading-sans">
        <img src="/hero.png" alt="Hero Image" class="absolute inset-0 w-full h-full object-cover opacity-40" />
        <div class="relative z-10">
            <h2 class="text-6xl md:text-7xl font-extrabold mb-6 animate-fade-in">{metadata.frontmatter.tagline}</h2>
            <p class="text-2xl text-gray-200 mb-8 animate-fade-in delay-200">{metadata.frontmatter.tagline2}</p>
            <a href="#join" class="px-8 py-4 bg-brand-red hover:bg-red-700 rounded-2xl font-semibold shadow-glow transition transform hover:scale-105">Join the Club</a>
        </div>
    </div>

    <!-- About -->
    <section id="about" class="py-24 animate-slide-up">
        <h3 class="text-4xl font-bold mb-6 font-heading-sans">About Us</h3>
        <p class="text-gray-300 leading-relaxed text-lg">{metadata.frontmatter.about_us}</p>
    </section>


    <!-- Subdivisions -->
    <section id="subdivisions" class="py-24 grid md:grid-cols-2 gap-12 animate-slide-up">
        <div class="p-8 bg-surface rounded-2xl shadow-xl transform transition hover:scale-105 hover:shadow-glow">
            <h4 class="text-3xl font-semibold mb-3 font-heading-sans">UAV Team</h4>
            <p class="text-gray-300">{metadata.frontmatter.uav_description}</p>
        </div>
        <div class="p-8 bg-surface rounded-2xl shadow-xl transform transition hover:scale-105 hover:shadow-glow">
            <h4 class="text-3xl font-semibold mb-3 font-heading-sans">Rocketry Team</h4>
            <p class="text-gray-300">{metadata.frontmatter.rocketry_description}</p>
        </div>
    </section>


