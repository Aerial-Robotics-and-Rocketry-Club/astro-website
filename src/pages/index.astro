    <!-- Join Us -->
    <section id="join" class="py-24 text-center animate-slide-up">
        <h3 class="text-4xl font-bold mb-4 font-heading-sans">Join Us</h3>
        <p class="text-gray-300 mb-8 text-lg">{metadata.frontmatter.join_us}</p>
        <a href={metadata.frontmatter.discord_link} class="px-8 py-4 bg-brand-red hover:bg-red-700 rounded-2xl font-semibold shadow-glow transition transform hover:scale-105">Join the Discord Server</a>
    </section>


    <!-- Contact -->
    <section id="contact" class="py-24 animate-slide-up">
        <h3 class="text-4xl font-bold mb-6 font-heading-sans">Contact</h3>
        <p class="text-gray-300 text-lg">Reach us at <a href={"mailto:" + metadata.frontmatter.contact_email} class="text-brand-red hover:underline">{metadata.frontmatter.contact_email}</a></p>
        <p class="text-gray-400 mt-3">Follow us on {metadata.frontmatter.social_media}.</p>
    </section>
